{
  "name": "challenge-04",
  "version": "1.0.0",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -L --no-warnings=ExperimentalWarning ./src/index.js",
    "start": "cross-env NODE_ENV=production node --no-warnings=ExperimentalWarning ./src/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --watchAll",
    "prepare": "husky",
    "generate-openapi": "dotenv -e .env.local -- node ./src/scripts/openapi.js",
    "db:drop": "dotenv -e .env.local -- cross-env-shell \"echo DROP DATABASE IF EXISTS $DATABASE_TO_DROP\" | dotenv -e .env.local -- prisma db execute --stdin",
    "db:seed": "dotenv -e .env.local -- prisma db seed",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:reset": "dotenv -e .env.local -- prisma migrate reset --force",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:create": "dotenv -e .env.local -- cross-env-shell \"echo CREATE DATABASE $DATABASE_TO_CREATE\" | dotenv -e .env.local -- prisma db execute --stdin",
    "db:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:migrate:create-only": "dotenv -e .env.local -- prisma migrate dev --create-only"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^5.21.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "express": "^5.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.7",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.3.0",
    "prisma": "^5.21.0",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.6.3",
    "yaml": "^2.6.0"
  },
  "prisma": {
    "schema": "src/utils/prisma/schema.prisma"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.13.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^9.13.0",
    "eslint-plugin-jsdoc": "^50.4.3",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postman2openapi": "^1.2.1",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0"
  },
  "volta": {
    "node": "20.18.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
